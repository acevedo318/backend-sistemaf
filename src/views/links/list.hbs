{{!-- STYLES --}}
<link rel="stylesheet" href="/css/stylesscards.css">
<div class="container p-4">
    <div class="row">
        <div class="card-deck">

        
        {{#each links}}
        <div class="col-md-4 col-12 col-sm-6 col-lg-4 col-xl-4">
            <div class="card my-2 border-primary text-center">
                <div class="card-header">
                    <img class="card-img-top" src="downloads/{{name}}/{{img}}"  alt="Card image cap">
                </div>
                
                <div class="card-body">
                    <a href="downloads/{{name}}/{{fbx}}" target="_blank">
                        <h3 class="card-title text-uppercase m-2">
                            {{name}}
                        </h3>
                    </a>
                    
                    
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                    <a class="btn btn-danger" href="/products/delete/{{id}}">
                        Eliminar
                    </a>
                    <a class="btn btn-secondary" href="/products/edit/{{id}}">
                        Editar
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-12 mx-auto">
            <div class="card card-body text-center">
                <p>Aún no hay productos guardados.</p>
                <a href="/products/add">¡Crea uno!</a>
            </div>
        </div>
        {{/each}}
        </div>
    </div>
</div>